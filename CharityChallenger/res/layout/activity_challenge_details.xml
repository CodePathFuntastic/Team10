    <Button
        android:id="@+id/btnSelectFriends"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttonshape"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="onClickSelectFriends"
        android:padding="2dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="Friends"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnInviewNow"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/btnSelectFriends"
        android:layout_alignBottom="@+id/btnSelectFriends"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:enabled="false"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="onClickInvite"
        android:padding="2dp"
        android:paddingBottom="3dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Invite"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</RelativeLayout>
