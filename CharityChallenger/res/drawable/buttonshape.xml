<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <corners android:radius="3dp" />

    <gradient
        android:angle="45"
        android:centerColor="#E35683"
        android:centerX="35%"
        android:endColor="#E35683"
        android:startColor="#E35683"
        android:type="linear" />

    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

    <size
        android:height="60dp"
         />

    <stroke
        android:width="3dp"
        android:color="#878787" />

</shape>